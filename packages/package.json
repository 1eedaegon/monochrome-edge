{
  "name": "monochrome-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "monochrome-core",
    "monochrome-react",
    "monochrome-vue",
    "monochrome-web"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:react",
    "build:core": "npm run build -w @monochrome-edge/core",
    "build:react": "npm run build -w @monochrome-edge/react",
    "build:vue": "npm run build -w @monochrome-edge/vue",
    "build:web": "npm run build -w @monochrome-edge/web",
    "dev": "npm run dev:core",
    "dev:core": "npm run dev -w @monochrome-edge/core",
    "typecheck": "npm run typecheck -ws",
    "clean": "rm -rf */dist */node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
