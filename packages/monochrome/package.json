{
  "name": "@monochrome-edge",
  "version": "1.0.0",
  "description": "Monochrome Edge UI Components - A modern, minimalist UI Components",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "style": "dist/monochrome-edge.css",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/monochrome-edge.css",
    "./styles/cold": "./dist/tokens/cold-theme.css",
    "./styles/warm": "./dist/tokens/warm-theme.css"
  },
  "scripts": {
    "build": "yarn build:css && yarn build:js",
    "build:css": "yarn copy:css",
    "build:js": "tsc",
    "copy:css": "cp -r ../../ui/* dist/",
    "prepublishOnly": "yarn build"
  },
  "keywords": [
    "ui",
    "monochrome-edge",
    "ui",
    "components",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0"
  }
}
