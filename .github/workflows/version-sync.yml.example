name: Sync Version

on:
  push:
    paths:
      - 'package.json'
    branches:
      - main
      - master

jobs:
  sync-version:
    runs-on: ubuntu-latest
    
    # Prevent concurrent runs to avoid conflicts
    concurrency:
      group: version-sync-${{ github.ref }}
      cancel-in-progress: false
    
    steps:
    - uses: actions/checkout@v3
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        fetch-depth: 0  # Full history for changelog
    
    - name: Setup Node.js
      uses: actions/setup-node@v3
      with:
        node-version: '18'
    
    - name: Configure Git
      run: |
        git config --local user.email "action@github.com"
        git config --local user.name "GitHub Action"
    
    - name: Pull latest changes
      run: |
        git pull --rebase origin ${{ github.ref_name }}
    
    - name: Update version in HTML
      run: npm run version:update
    
    - name: Generate changelog
      run: npm run changelog
    
    - name: Check for changes
      id: changes
      run: |
        if [[ -n $(git status --porcelain) ]]; then
          echo "has_changes=true" >> $GITHUB_OUTPUT
        else
          echo "has_changes=false" >> $GITHUB_OUTPUT
        fi
    
    - name: Commit and push if changed
      if: steps.changes.outputs.has_changes == 'true'
      run: |
        # Stage changes
        git add index.html CHANGELOG.md
        
        # Create commit
        git commit -m "chore: sync version and update changelog [skip ci]" || true
        
        # Try to push, with retry on failure
        for i in {1..3}; do
          echo "Attempt $i to push changes..."
          
          # Pull latest changes with rebase
          git pull --rebase origin ${{ github.ref_name }}
          
          # Try to push
          if git push origin HEAD:${{ github.ref_name }}; then
            echo "Successfully pushed changes"
            break
          fi
          
          # Wait before retry
          if [ $i -lt 3 ]; then
            echo "Push failed, retrying in 5 seconds..."
            sleep 5
          else
            echo "Failed to push after 3 attempts"
            exit 1
          fi
        done